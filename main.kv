#:kivy 2.3.0
#:import FocusButton lib.widgets.FocusButton
#:import MDList kivymd.uix.list.MDList

# ========================================
# Main Screen
# ----------------------------------------
<MainScreen>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './media/faces/smile.jpg'

# ========================================
# Listening Screen
# ----------------------------------------
<ListeningScreen>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './media/faces/listening.jpg'

# ========================================
# Pong
# ----------------------------------------
<PongMenu>:
    MDList:
        id: container

    # orientation: "vertical"
    # title: "Pong"
    # FocusButton:
    #     text: "Press Me 101!"
    #     focus: True
    # FocusButton:
    #     text: "Press Me 1012"
    # FocusButton:
    #     text: "Press Me 103"
    # FocusButton:
    #     text: "Press Me 104"


<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Color:
            rgba: 0, .7, 0, 1
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y


# ========================================
# Tetris
# ----------------------------------------
<TetrisWidget>:
    cols: 10
    size_hint: (None, 1)
    width: self.height/2
    spacing: 2
    padding: 2
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos

<TetrisPanel>:
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos

<TetrisGameOver>:
    Button:
        color: 0, 0.25, 0.3, 1
        background_color: 0.15 ,0.15, 0.15, 1
        font_size: self.height * 0.1
        font_name: "label_font.ttf"
        text: "n\ne\nw\n\ng\na\nm\ne"
        pos_hint: {"center_x": .5, "center_y": 0.5}
        size_hint: 1, 1
        on_press: root.parent.new_game()
        background_normal: ""


# ========================================
# Snake
# ----------------------------------------
<SnakeFruit>:
    canvas:
        Color:
            rgb: (1,0,0)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeHead>:
    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeTail>:
    canvas:
        Color:
            rgba: (1,1,1,.8)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeGame>:
    head: snake_head
    fruit: snake_fruit

    SnakeHead:
        id: snake_head
        size: root.player_size - 2,root.player_size - 2
    SnakeFruit:
        id: snake_fruit
        size: root.player_size - 2, root.player_size - 2
    Label:
        size: root.player_size, root.player_size
        pos: root.size[0] / 10, 9 * root.size[1] / 10
        text: str(root.score)



# ========================================
# Miscelaneous Widgets
# ----------------------------------------
<FocusButton>:
    current_focus: False



# ========================================
# Light Cycles
# ----------------------------------------
<LightCycle>:
    size: 20, 20
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<LightCyclesGame>:
    canvas.before:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        font_size: 40
        pos_hint: {'top': 0.95}
        size_hint: 1, 0.1
        text: 'Light Cycles'
        color: 0, 1, 1, 1

<LightCyclesScreen>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

# ========================================
# Pitfall
# ----------------------------------------
<PitfallScreen>:
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<Player>:
    size: 40, 60
    canvas:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Obstacle>:
    size: 80, 40
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PitfallGame>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

        # Draw ground
        Color:
            rgba: 0.3, 0.2, 0.1, 1
        Rectangle:
            pos: 0, 0
            size: self.width, 60

    Label:
        font_size: 30
        pos_hint: {'top': 0.95}
        size_hint: 1, 0.1
        text: f'Score: {root.score}'
        color: 1, 1, 1, 1
